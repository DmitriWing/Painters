@model IEnumerable<Painters.Models.Painter>

@{
    ViewBag.Title = "Index";
}


<h2>All Painters</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">

    @foreach (var item in Model)
    {

        <div class="col index-cards text-center">
            <div class="inCard">
                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
            </div>
            <div class="inCardImg">
                <img class="index-img" src="@Url.Action("RenderImage", new { id = item.Id})" />
            </div>
            <div class="inCard">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </div>



    }
</div> <!-- row ends -->
