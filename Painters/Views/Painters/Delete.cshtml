@model Painters.Models.Painter

@{
    ViewBag.Title = "Delete";
}

<h2>@Model.Name - Delete</h2>

<h3>Are you sure you want to delete this painter?</h3>
<div>
    <table class="table table-hover">
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Name)</th>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Country)</th>
            <td>@Html.DisplayFor(model => model.Country)</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Biography)</th>
            <td>@Html.DisplayFor(model => model.Biography)</td>
        </tr>
        <tr>
            <td colspan="2" class="spannedCell text-center">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-default" /> <span> | </span>
                    @Html.ActionLink("Back to List", "Index") <span> | </span>
                    @Html.ActionLink("See Details", "Details", new { id = Model.Id });
                }
            </td>
        </tr>
    </table>


</div>
